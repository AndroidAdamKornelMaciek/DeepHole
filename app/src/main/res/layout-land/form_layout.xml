<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="5"
        android:weightSum="3">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/hole_photo"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:onClick="takePhoto"
            android:layout_weight="1"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Submit Form"
            android:id="@+id/confirm_button"
            android:textAllCaps="false"
            android:onClick="validateMailData"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="8">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/description"
            android:layout_below="@+id/hole_photo"
            android:layout_centerHorizontal="true"
            android:maxLines="2"
            android:lines="2"
            android:layout_marginBottom="10dp"
            android:hint="Pothole description."
            android:layout_weight="2"/>

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/recipient_list"
            android:layout_above="@+id/localization_menu"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"/>

        <RadioGroup
            android:id="@+id/localization_menu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/sender_signature"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            android:weightSum="2">

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Automatically fetch current localization."
                android:id="@+id/auto_radio_button"
                android:layout_gravity="left"
                android:checked="true"
                android:layout_weight="1"/>

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Manually choose your localization."
                android:id="@+id/manual_radio_button"
                android:layout_gravity="left"
                android:layout_weight="1"/>
        </RadioGroup>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:ems="15"
            android:id="@+id/loggedUser"
            android:layout_above="@+id/confirm_button"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Who Is Logged?"
            android:layout_weight="2"/>
    </LinearLayout>




</LinearLayout>