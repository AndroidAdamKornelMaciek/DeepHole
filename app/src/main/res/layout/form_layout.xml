<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="460dp"
        android:layout_height="160dp"
        android:id="@+id/hole_photo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
		android:layout_marginTop="5dp"
		android:onClick="takePhoto"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/description"
        android:layout_below="@+id/hole_photo"
        android:layout_centerHorizontal="true"
        android:maxLines="2"
        android:lines="2"
        android:layout_marginBottom="10dp"
        android:hint="Pothole description."/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipient_list"
        android:layout_above="@+id/localization_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <RadioGroup
        android:id="@+id/localization_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/sender_signature"
        android:layout_marginBottom="10dp"
    >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Automatically fetch current localization."
            android:id="@+id/auto_radio_button"
            android:layout_gravity="left"
			android:checked="true"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manually choose your localization."
            android:id="@+id/manual_radio_button"
            android:layout_gravity="left" />
    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="15"
        android:id="@+id/sender_signature"
        android:layout_above="@+id/confirm_button"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:hint="Please insert PESEL."/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Form"
        android:id="@+id/confirm_button"
        android:textAllCaps="false"
        android:onClick="sendMail"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>