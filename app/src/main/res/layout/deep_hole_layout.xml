<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".DeepHoleActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Registration"
        android:id="@+id/report_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAllCaps="false"
        android:onClick="formulate"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Insert"
		android:id="@+id/button"
		android:layout_alignParentTop="true"
		android:layout_alignLeft="@+id/report_button"
		android:layout_alignStart="@+id/report_button"
		android:onClick="insertTest"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Get all"
		android:id="@+id/button2"
		android:layout_below="@+id/button"
		android:layout_alignLeft="@+id/button"
		android:layout_alignStart="@+id/button"
		android:onClick="getAllTest"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Delete"
		android:id="@+id/button3"
		android:layout_below="@+id/button2"
		android:layout_alignLeft="@+id/button2"
		android:layout_alignStart="@+id/button2"
		android:onClick="deleteTest"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Maps"
		android:id="@+id/button4"
		android:layout_alignParentBottom="true"
		android:layout_alignLeft="@+id/report_button"
		android:layout_alignStart="@+id/report_button"
		android:onClick="mapsTest"/>

</RelativeLayout>
